TestCase := Rectangle {
    property<bool> checked;
    property <int> border;
    animate color { }
    states [
        checked when checked: {
            color: blue;
            border: 42;
        }
    ]

    transitions [
        in does_not_exist: {
//        ^error{State 'does_not_exist' does not exist}
            animate * { }
        }
        in checked: {
//        ^error{The property 'background' cannot have transition because it already has an animation}
            animate color { }
        }
    ]


}

