// Regression test for a panic in the compiler

TestCase := Rectangle {
    width: 300px;
    height: 300px;
    property<int> value: 1;

    for c[index] in [#f00, #00f, #0a0]: Rectangle {
        y: index * height;
        width: parent.width;
        height: 100px;
        GridLayout {
            Rectangle {
                color: c;

                TouchArea {
                    width: parent.width;
                    height: parent.height;
                    clicked => {
                        value += index;
                    }
                }
            }
        }
    }
}


