component Btn := Rectangle {
    property<string> button_text;
    signal clicked;
    width: 100px;
    height: 75px;
    TouchArea {
        width: 100px;
        height: 75px;
        clicked => { root.clicked() }
    }
    Text {
        x: 50px;
        y: 10px;
        text: button_text;
        color: black;
    }
}

PlusMinus := Rectangle {
    width: 100px;
    height: 300px;
    color: white;

    property<int> counter;

    GridLayout {
        Row {
            Btn {
                clicked => { counter -= 1 }
                button_text: "-";
            }
        }
        Row {
            Text {
                text: counter;
                color: black;
            }
        }
        Row {
            Btn {
                clicked => { counter += 1 }
                button_text: "+";
            }
        }
    }
}
