TestCase := Rectangle {
    property <int> touch1;
    property <int> touch2;

    TouchArea {
        x: 100phx;
        y: 100phx;
        width: 10phx;
        height: 10phx;
        clicked => { touch1+=1; }
    }
    TouchArea {
        x: 100phx;
        y: 100phx;
        width: 5phx;
        height: 5phx;
        clicked => { touch2+=1; }
    }
}

/*
