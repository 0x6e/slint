component TwoRectangle := Rectangle {

    signal clicked;

    Rectangle {
        x: 50px;
        y: 50.0px;
        width: 25px;
        height: 25px;
        color: red;

        my_area := TouchArea {
            width: 25px;
            height: 25px;
            clicked => { root.clicked() }
        }
    }
}

component ButtonRectangle := Rectangle {
    property<string> button_text;
    signal clicked;
    width: 100px;
    height: 75px;

    inner := Rectangle {
        color: { area.pressed ? green : root.color };
        animate color { duration: 500ms; }
        area := TouchArea {
            width: inner.width;
            height: inner.height;
            clicked => { root.clicked() }
        }
        Text {
            animate x { duration: 500ms; }
            animate y { duration: 500ms; }
            x: { area.pressed ? 60px : 50px; }
            y: { area.pressed ? 20px : 10px; }
            text: button_text;
            color: black;
            width: root.width;
            height: root.height;
            horizontal_alignment: align_left;
            vertical_alignment: align_center;
        }
        animate x { duration: 500ms; }
        animate y { duration: 500ms; }
        animate width { duration: 500ms; }
        animate height { duration: 500ms; }
        x: { area.pressed ? 0px-10px : 0px }
        y: { area.pressed ? 0px-10px : 0px; }
        width: { area.pressed ? (root.width + 20px) : root.width; }
        height: { area.pressed ? (root.height + 20px) : root.height; }
    }
}

Hello := Rectangle {

    signal foobar;
    signal plus_clicked;
    signal minus_clicked;

    color: white;

    TwoRectangle {
        width: 100px;
        height: 100px;
        color: blue;
        clicked => { foobar() }
    }
    Rectangle {
        x: 100px;
        y: 100px;
        width: (100px);
        height: {100px}
        color: green;
        Rectangle {
            x: 50px;
            y: 50.0px;
            width: 25px;
            height: 25px;
            color: yellow;
        }
    }
    Image {
        x: 200px;
        y: 200px;
        source: img!"../../examples/graphicstest/logo.png";
    }

    ButtonRectangle {
        color: #888;
        x: 50px;
        y: 225px;
        clicked => { counter += 1 }
        button_text: "+";
    }
    property<int> counter;
    counter_label := Text { x: 100px; y: 300px; text: counter; color: black; }
    ButtonRectangle {
        color: #888;
        x: 50px;
        y: 350px;
        clicked => { minus_clicked() }
        button_text: "-";
    }

     Path {
        x: 100px;
        y: 300px;
        fill_color: green;
        stroke_color: black;
        stroke_width: 2.0;

        LineTo {
            x: 100;
            y: 50;
        }
        LineTo {
            x: 0;
            y: 100;
        }

        ArcTo {
            x: 0;
            y: 0;
            radius_x: 10;
            radius_y: 10;
        }

        Close {}
    }

    Path {
        commands: "M 100 300 Q 150 50 250 150 C 250 300 300 300 300 450 A 50 50 0 1 0 450 450 L 550 300";
        x: 100px;
        y: 500px;
        stroke_color: black;
        stroke_width: 2.0;
    }
}

