TestCase := Rectangle {
    width: 300px;
    height: 300px;
    property<[{name: string, account: string, score: float}]> model: [
        {
            name: "Olivier",
            account: "ogoffart",
            score: 456,
        },
        {
            name: "Simon",
            account: "tronical",
            score: 789,
        }
    ];

    property <int> clicked_score;

    for person[i] in model: TouchArea {
        x: i*10px;
        width: 10px;
        height: 10px;
        property <int> score: person.score;
        clicked => {
            person.score += 1;
            person.score += 1;
            clicked_score = score;

        }
    }
}

