
component Btn := Rectangle {
    property<string> button_text;
    signal clicked;
    width: 100pt;
    height: 75pt;
    TouchArea {
        width: 100pt;
        height: 75pt;
        clicked => { root.clicked() }
    }
    Text {
        x: 50pt;
        y: 10pt;
        text: button_text;
        color: black;
    }
}

PlusMinus := Rectangle {
    width: 100pt;
    height: 300pt;
    color: white;

    property<int32> counter;

    GridLayout {
        Row {
            Btn {
                clicked => { counter -= 1 }
                button_text: "-";
            }
        }
        Row {
            Text {
                text: counter;
                color: black;
            }
        }
        Row {
            Btn {
                clicked => { counter += 1 }
                button_text: "+";
            }
        }
    }
}
