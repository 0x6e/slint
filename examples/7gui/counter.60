import { Button, LineEdit } from "sixtyfps_widgets.60";

Counter := Window {
    property <int> value: 0;
    preferred-height: 30px;
    layout := HorizontalLayout {
        spacing: 7px;
        padding: spacing;
        LineEdit {
            enabled: false;
            text: value;
        }
        Button {
            text: "Count";
            clicked => { value += 1; }
        }
    }
}
