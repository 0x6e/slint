import { Button, CheckBox, SpinBox, Slider, GroupBox } from "sixtyfps_widgets.60";

App := Window {
    width: 500lx;
    height: 400lx;
    Rectangle {
        color: #ecedeb;
        width: parent.width;
        height: parent.height;
    }
    
    GridLayout {
        padding: 20lx;
        spacing: 20lx;

        Row {
            GridLayout {
                Row {
                    Text {
                        text: "Below are some of the standard widgets that application";
                        color: black;
                    }
                }
                Row {
                    Text {
                        text: "developers can easily re-use.";
                        color: black;
                    }
                }
            }
        }

        Row {
            GroupBox {
                title: "Button";
                gallery_button := Button {
                    text: gallery_button.pressed ? "(pressed)" : "(not pressed)";
                }
            }
            Rectangle {}
        }

        Row {
            GroupBox {
                title: "CheckBox";
                checkbox := CheckBox {
                    text: checkbox.checked ? "(checked)" : "(unchecked)";
                    checked: true;
                }
            }
            Rectangle {}
        }
        Row {
            GroupBox {
                title: "SpinBox";
                SpinBox {
                    maximum_width: 120lx;
                    value: 42;
                }
            }
            Rectangle {}
        }
        Row {
            GroupBox {
                title: "Slider";
                Slider {
                    value: 42;
                }
            }
        }
    }
}
