import { Button, CheckBox, SpinBox, Slider } from "sixtyfps_widgets.60";

WidgetBox := GridLayout {
    property <string> title;
    spacing: 5lx;
    Row {
        Text {
            text: root.title;
            color: black;
        }
    }
    Row {
        Rectangle {
            border_width: 1lx;
            border_color: #d0d3cf;
            border_radius: 3lx;
            color: white;

            GridLayout {
                padding: 10lx;
                $children
            }
        }
    }
}

App := Window {
    width: 500lx;
    height: 400lx;
    Rectangle {
        color: #ecedeb;
        width: parent.width;
        height: parent.height;
    }
    
    GridLayout {
        padding: 20lx;
        spacing: 20lx;
        Row {
            WidgetBox {
                title: "Button";
                gallery_button := Button {
                    text: gallery_button.pressed ? "Button (pressed)" : "Button (not pressed)";
                }
            }
            Rectangle {}
        }

        Row {
            WidgetBox {
                title: "CheckBox";
                CheckBox {
                    text: "A CheckBox";
                    checked: true;
                }
            }
            Rectangle {}
        }
        Row {
            WidgetBox {
                title: "SpinBox";
                SpinBox {
                }
            }
        }
        Row {
            WidgetBox {
                title: "Slider";
                Slider {
                }
            }
        }
    }
}
