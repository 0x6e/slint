import { Button, CheckBox, SpinBox, Slider, GroupBox, LineEdit, StandardListView } from "sixtyfps_widgets.60";

App := Window {
    width: 500px;
    height: 700px;
    Rectangle {
        color: #ecedeb;
        width: parent.width;
        height: parent.height;
    }

    VerticalLayout {
        padding: 20px;
        spacing: 20px;

        Text {
            text: "Below are some of the standard widgets that";
        }
        Text {
            text: "application developers can easily re-use.";
        }

        HorizontalLayout {
            GroupBox {
                title: "Button";
                gallery_button := Button {
                    text: gallery_button.pressed ? "(pressed)" : "(not pressed)";
                }
            }
            Rectangle {}
        }

        HorizontalLayout {
            GroupBox {
                title: "CheckBox";
                checkbox := CheckBox {
                    text: checkbox.checked ? "(checked)" : "(unchecked)";
                    checked: true;
                }
            }
            Rectangle {}
        }

        HorizontalLayout {
            GroupBox {
                title: "SpinBox";
                SpinBox {
                    value: 42;
                }
            }
            Rectangle {}
        }

        GroupBox {
            title: "Slider";
            Slider {
                value: 42;
            }
        }

        GroupBox {
            title: "LineEdit";
            LineEdit {
                placeholder-text: "Enter some text";
            }
        }

        GroupBox {
            title: "StandardListView";
            StandardListView {
                model: [
                    {text: "Lorem"}, {text: "ipsum"},{text: "dolor"},{text: "sit"},{text: "amet"},{text: "consetetur"},
                    {text: "Lorem"}, {text: "ipsum"},{text: "dolor"},{text: "sit"},{text: "amet"},{text: "consetetur"},
                ];
            }
        }
    }
}

