[alias]
xtask = "run --package xtask --"

[build]
# This is needed to correctly extract the list of system libraries needed for linkage against the
# static library. We used to do this on-demand via a single cargo rustc invocation, but that invalidates
# the previous build and results in a build ping-pong, slowing down development.
rustflags = "--print=native-static-libs"
